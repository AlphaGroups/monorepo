{
  "name": "my-monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:web\" \"yarn dev:lms\"",
    "dev:web": "cd apps/web && yarn dev",
    "dev:lms": "cd apps/lms && yarn dev -p 4000",
    "build": "yarn build:web && yarn build:lms",
    "build:web": "cd apps/web && yarn build",
    "build:lms": "cd apps/lms && yarn build",
    "start": "concurrently \"yarn start:web\" \"yarn start:lms\"",
    "start:web": "cd apps/web && yarn start",
    "start:lms": "cd apps/lms && yarn start -p 4000",
    "install-all": "yarn install && cd apps/web && yarn install && cd ../lms && yarn install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
